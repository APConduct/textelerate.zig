# Environment variables for act local testing
# Copy this file to .env.act and customize as needed
#
# Usage: cp env.act.template .env.act

# GitHub-related environment variables
GITHUB_TOKEN=fake_token_for_local_testing
GITHUB_REPOSITORY=yourusername/textelerate
GITHUB_REPOSITORY_OWNER=yourusername
GITHUB_ACTOR=local-tester
GITHUB_WORKSPACE=/github/workspace
GITHUB_EVENT_NAME=push
GITHUB_REF=refs/heads/main
GITHUB_SHA=abc123fake
GITHUB_RUN_ID=123456789
GITHUB_RUN_NUMBER=1

# CI environment variables
CI=true
GITHUB_ACTIONS=true

# Zig-specific environment variables
ZIG_VERSION=0.14.1

# Project-specific environment variables
PROJECT_NAME=textelerate
VERSION=0.1.0

# Local testing flags
LOCAL_TESTING=true
ACT_RUNNER=true

# Docker-related settings for act
DOCKER_HOST=unix:///var/run/docker.sock

# Artifact and cache settings
ACTIONS_CACHE_URL=
ACTIONS_RUNTIME_TOKEN=fake_runtime_token

# Debugging options
ACTIONS_STEP_DEBUG=false
ACTIONS_RUNNER_DEBUG=false

# Platform-specific overrides for local testing
RUNNER_OS=Linux
RUNNER_ARCH=X64
RUNNER_TEMP=/tmp

# Act-specific settings
ACT_LOG_LEVEL=info
ACT_PLATFORM=ubuntu-latest=catthehacker/ubuntu:act-latest

# Custom environment variables (add your own below)
# CUSTOM_VAR=value
